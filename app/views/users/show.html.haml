.mypage-header
  マイページ
.mypage-main
  .user-profile
    = "ユーザー名：#{@user.nickname}"
    = link_to "ユーザー情報の編集", edit_user_path
  %br
  .user-posts
    = "#{@user.nickname}さんの投稿一覧"
    - @user.posts.each do |post|
      .route-data-box
        .route-data-box-upper
          .route-name
            = post.title
          .route-place
            = post.prefecture.name
          = link_to post_path(post), class: "post-link" do
            .route-image{style: "background-image: url(#{post.route_image})"}
          .route-distance
            = "走行距離#{post.distance}km"
        .route-data-box-lower
          .likes-icon
            %i.far.fa-heart
          .bookmark-icon
            %i.far.fa-bookmark
          .comments-icon
            %i.far.fa-comment

= link_to "トップページへ", root_path